<%= form_for @list, :html => { :class => "form-horizontal list" } do |f| %>

  <% if @list.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@list.errors.count, "error") %> prohibited this list from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @list.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :today, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :today, :class => 'form-control' %>
    </div>
    <%=f.error_span(:today) %>
  </div>
  <div class="form-group">
    <%= f.label :yesterday, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :yesterday, :class => 'form-control' %>
    </div>
    <%=f.error_span(:yesterday) %>
  </div>

  <div class="form-group">
    <%= f.label :impediment, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.check_box :impediment, :class => 'btn' %>
    </div>
    <%=f.error_span(:impediment) %>
  </div>

  <%= f.hidden_field :user_id, value: current_user.id %>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                lists_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
